<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/commute_home_company_selector"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="51dp"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/nsdk_commute_care_road_go_home" />

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="24dp"
                android:layout_height="4dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/nsdk_drawable_commute_care_road_bottom_panel_tab_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/company_layout"
            android:layout_width="51dp"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/company_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/nsdk_commute_care_road_go_to_company" />

            <ImageView
                android:id="@+id/company_img"
                android:layout_width="24dp"
                android:layout_height="4dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/nsdk_drawable_commute_care_road_bottom_panel_tab_line" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/bottom_divider"
        android:background="#3385ff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!-- 比例尺 -->
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:id="@+id/commute_care_road_bottom_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>