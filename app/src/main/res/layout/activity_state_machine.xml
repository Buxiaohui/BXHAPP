<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="这是一个充满机会的时代，等待你取得成功" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn0"
            style="@style/machine_btn"
            android:text="timeout" />

        <TextView
            android:id="@+id/btn1"
            style="@style/machine_btn"
            android:text="wakeup" />

        <TextView
            android:id="@+id/btn2"
            style="@style/machine_btn"
            android:text="tired" />

        <TextView
            android:id="@+id/btn3"
            style="@style/machine_btn"
            android:text="quit" />

        <TextView
            android:id="@+id/btn4"
            style="@style/machine_btn"
            android:text="quitNow" />

        <TextView
            android:id="@+id/btn5"
            style="@style/machine_btn"
            android:text="start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn6"
                style="@style/machine_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="sendMsg" />

            <EditText
                android:id="@+id/input"
                style="@style/machine_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="输入命令值" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn7"
                style="@style/machine_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="trans_to" />

            <EditText
                android:id="@+id/input_trans"
                style="@style/machine_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="输入命令值" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>