<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="13dp"
    android:paddingTop="13dp"
    android:paddingRight="13dp"
    android:paddingBottom="13dp">

    <TextView
        android:id="@+id/concern_road_tip_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/nsdk_commute_concern_road_tip_0" />

    <TextView
        android:id="@+id/concern_road_tip_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/concern_road_tip_0"
        android:layout_marginTop="5dp"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/nsdk_commute_concern_road_tip_1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/concern_road_tip_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/concern_road_tip_1"
        android:layout_marginTop="5dp"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/nsdk_commute_concern_road_tip_2"
        android:textStyle="bold" />

</RelativeLayout>