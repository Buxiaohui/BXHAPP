<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="#60000000"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="13dp"
    android:paddingBottom="20dp">


    <TextView
        android:id="@+id/commute_road_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        tools:text="@tools:sample/cities" />

    <TextView
        android:id="@+id/commute_road_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:maxLines="1"
        tools:text="@tools:sample/full_names" />

    <RelativeLayout
        android:id="@+id/commute_collect_container"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/nsdk_drawable_commute_care_road_bottom_panel_item_collect_bg_selector">

        <TextView
            android:id="@+id/commute_collect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:enabled="true"
            android:drawableLeft="@drawable/nsdk_drawable_icon_fav_yes"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="关注"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </RelativeLayout>
</LinearLayout>