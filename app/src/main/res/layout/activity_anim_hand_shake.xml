<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--simple panel-->
    <LinearLayout
        android:id="@+id/navi_guodao_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:background="@drawable/nsdk_rr_navi_pass_road_right"
        tools:visibility="visible">
        <!--标签-->
        <TextView
            android:id="@+id/guodao_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bnav_bg_pass_road_guodao_label"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:text="国道"
            android:textColor="@android:color/white"
            android:textSize="11dp"
            android:textStyle="bold" />
        <!--名字-->
        <TextView
            android:id="@+id/guodao_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp"
            android:text="走向成功的道路"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="13dp"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/nsdk_28"
        android:src="@drawable/nsdk_drawable_commute_route_tab_recom" />

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/nsdk_drawable_commute_route_tab_recom" />

    <ImageView
        android:id="@+id/img_3"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/img_2"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="40dp"
        android:src="@drawable/nsdk_drawable_commute_route_tab_recom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"></View>
        <TextView
            android:id="@+id/num_img"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-9dp"
            android:background="@drawable/nsdk_drawable_commute_care_road_dest_num_bg"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:visibility="visible"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"></View>

        <TextView
            android:id="@+id/num_img_1"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-9dp"
            android:background="@drawable/nsdk_drawable_commute_care_road_dest_num_bg"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:visibility="visible"
            tools:visibility="visible" />
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"></View>

        <com.example.buxiaohui.bxhapp.widgets.CenterNumTextView
            android:id="@+id/num_img_2"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-9dp"
            android:background="@drawable/nsdk_drawable_commute_care_road_dest_num_bg"
            android:textColor="@android:color/white"
            android:visibility="visible"
            tools:visibility="visible" />
    </LinearLayout>
</RelativeLayout>