<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff00ff"
    android:orientation="vertical"
    android:visibility="visible"
    tools:background="@color/nsdk_rg_transparent"
    tools:visibility="visible">

    <RelativeLayout
        android:id="@+id/bnav_rg_common_notification_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="@dimen/nsdk_rg_toolbox_margin_left"
        android:background="@drawable/nsdk_nav_notification_background"
        android:elevation="@dimen/nsdk_rg_toolbox_margin_left">

        <ImageView
            android:id="@+id/bnav_rg_common_notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:src="@drawable/bnav_common_bg_mask_night"
            tools:visibility="visible" />

        <RelativeLayout
            android:id="@+id/bnav_rg_common_notification_all_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/bnav_rg_common_notification_close_layout"
            android:layout_toRightOf="@id/bnav_rg_common_notification_icon">

            <LinearLayout
                android:id="@+id/bnav_rg_common_notification_title_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bnav_rg_common_notification_maintitle_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="@color/nsdk_rg_common_notification_low_priority_main_text"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="main_title"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/bnav_rg_common_notification_sub_third_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bnav_rg_common_notification_subtitle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textColor="@color/nsdk_rg_common_notification_low_priority_sub_text"
                        android:textSize="14dp"
                        tools:text="sub_title"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/bnav_rg_common_notification_tips_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textColor="@color/nsdk_rg_common_notification_low_priority_third_text"
                        android:textSize="12dp"
                        tools:text="tips"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bnav_rg_common_notification_close_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <View
                android:id="@+id/bnav_rg_common_notification_close_line"
                android:layout_width="1px"
                android:layout_height="34dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/bnav_rg_common_notification_close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/nsdk_drawable_toolbox_icon_quit_nav"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>