<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle">
    <item android:height="76dp">
        <shape android:shape="rectangle">
            <solid
                android:color="#02000000"
                tools:color="@android:color/holo_red_dark"></solid>
            <corners android:radius="38dp" />
            <gradient
                android:angle="0"
                android:endColor="#ff0000"
                android:startColor="#00ff00" />
        </shape>
    </item>
    <item
        android:height="70dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid
                android:color="#04000000"
                tools:color="@android:color/holo_blue_light"></solid>
            <corners android:radius="37dp" />
        </shape>
    </item>
</layer-list>